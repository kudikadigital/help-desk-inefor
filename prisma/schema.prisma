generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

model Lead {
  id              String   @id @default(cuid())
  name            String
  email           String   @unique
  phone           String
  paymentProofUrl String?
  status          String   @default("NOVO") // NOVO, AGUARDANDO_VALIDACAO, MATRICULADO
  createdAt       DateTime @default(now())
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}
